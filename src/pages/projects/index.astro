---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects'))
  .sort((a, b) => a.data.order - b.data.order);
---

<Base title="Projects">
  <h1>Projects</h1>
  <p class="subtitle">Things I've built or contributed to.</p>

  {projects.length === 0 ? (
    <p class="empty">Coming soon.</p>
  ) : (
    <ul class="project-list">
      {projects.map((project) => (
        <li class="project-card">
          <h2>{project.data.title}</h2>
          <p>{project.data.description}</p>
          <div class="project-meta">
            {project.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
            <div class="project-links">
              {project.data.url && <a href={project.data.url} target="_blank" rel="noopener">Live</a>}
              {project.data.repo && <a href={project.data.repo} target="_blank" rel="noopener">Source</a>}
            </div>
          </div>
        </li>
      ))}
    </ul>
  )}
</Base>

<style>
  h1 {
    margin-bottom: var(--space-xs);
  }

  .subtitle {
    color: var(--c-text-muted);
    margin-bottom: var(--space-xl);
  }

  .empty {
    color: var(--c-text-muted);
    font-style: italic;
  }

  .project-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .project-card {
    border: 1px solid var(--c-border);
    border-radius: 8px;
    padding: var(--space-lg);
    transition: border-color var(--transition);
  }

  .project-card:hover {
    border-color: var(--c-text-muted);
  }

  .project-card h2 {
    font-size: 1.1rem;
    margin-bottom: var(--space-xs);
  }

  .project-card p {
    font-size: 0.9rem;
    color: var(--c-text-muted);
    margin-bottom: var(--space-md);
  }

  .project-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .tag {
    font-size: 0.7rem;
    font-family: var(--font-mono);
    color: var(--c-text-muted);
    background: var(--c-surface);
    border: 1px solid var(--c-border);
    padding: 0.1em 0.45em;
    border-radius: 3px;
  }

  .project-links {
    margin-left: auto;
    display: flex;
    gap: var(--space-md);
    font-size: 0.8rem;
  }
</style>
